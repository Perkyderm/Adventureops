<h1>TESTTTTTTT</h1>
<div class="container" id='feed'>
    <div class="row">
        <div class=" col-lg-6">
            Your Feed
        </div>
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <select class="custom-select" id="category">
                            <option selected value="All">All Types</option>
                            <option value="Hike">Hike</option>
                            {{!-- {{#each posts}}
                            <option value="{{type}}">{{type}}</option>
                            {{/each}} --}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="location">Select Location:</label>
                        <select class="custom-select" id="location">
                            {{!-- {{#each}}
                            <option value="{{location}}">{{location}}</option>
                            {{/each}} --}}
                        </select>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 post-container">
                    {{#if cont}}
                    {{#each posts}}
                    <div class="card" data-post="{{id}}">
                        <div class="card-header">
                            {{!-- <button class="delete btn btn-danger" style="float: right;">X</button>
                            <button class="edit btn btn-primary" style="float: right;">EDIT</button> --}}
                            <small style="float: right;"> ({{date}})</small>
                            <h5 style="font-weight: 700;">{{user}}</h5>
                            <p>{{type}}</p>
                        </div>
                        <div class="card-body">
                            <p style="color: black;">{{content}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}

                    {{#unless cont}}
                    <h4>No posts yet for this category. <br>Use the form below to make a new post.
                    </h4>

                    {{/unless}}
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Create --}}
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-sm-2 mt-4">
                <a class="btn btn-light" href="/view-posts">Go to Posts</a>
            </div>
            <div class="col-md-2">
                <a class="btn btn-light" href="/">Home</a>
            </div>
        </div>
        <div class="col-md-5 offset-md-3">
            <form id="cms">
                <div class="form-group">
                    <label for="body">Content:</label>
                    <textarea class="form-control" rows="10" id="body"></textarea>
                    <div class="form-group">
                        <label for="category">Select Type:</label>
                        <select class="custom-select" id="createCategory">
                            <option value="Hike">Hike</option>
                            {{!-- {{#each}}
                            <option value="{{type}}">{{type}}</option>
                            {{/each}} --}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="location">Select Location:</label>
                        <select class="custom-select" id="createLocation">
                            {{!-- {{#each}}
                            <option value="{{type.location}}">{{type.location}}</option>
                            {{/each}} --}}
                        </select>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success submit btn-lg">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

