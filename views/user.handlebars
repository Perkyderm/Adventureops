<div class="container" style="text-align: center;">
    <h2>Welcome {{username}}</h2>
</div>

<div class="container" id='feed' style="">
    <div class="row">
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-10">
                    <div class="form-group" style="">
                        <select class="custom-select" id="category">
                            <option selected value="">All Types</option>
                            {{#each types}}
                            <option value="{{type}}">{{type}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="overflow-auto" style="max-width: 1600px; max-height: 1280px">
                    <div class="col-md-10 post-container">
                        {{#if cont}}
                        {{#each posts}}
                        <div class="card" data-post="{{id}}">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col justify-content-start">
                                        <h5 style="font-weight: 700;">{{user}}</h5>
                                    </div>
                                    <div class="col justify-content-end">
                                        <button class="delete btn btn-danger float-end me-1 w-auto">x</button>

                                    </div>


                                </div>
                                <div class="row">
                                    <div class="col justify-content-start">
                                        <small> ({{date}})</small>
                                    </div>
                                    <div class="col">
                                        <div class="row">
                                            <div class="col justify-content-end">
                                                <h5 class="float-end me-1" style="font-weight: 700;">
                                                    {{type}}</h5>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col justify-content-end"><small class="float-end">
                                                    ({{location}})</small></div>
                                        </div>

                                    </div>

                                </div>

                            </div>
                            <div class="card-body">
                                <p style="color: black;">{{content}}</p>
                            </div>
                        </div>

                        {{/each}}
                        {{/if}}

                        {{#unless cont}}<br>
                        <h4 style="text-align: center;">No posts yet!
                        </h4>

                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Custom Script -->
{{#if type}}
<script src="../j-s/user.js" type="text/javascript"></script>
{{/if}}

{{#unless type}}
<script src="j-s/user.js" type="text/javascript"></script>
{{/unless}}