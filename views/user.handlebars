<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/logout">
                Logout
            </a>
            <a class="navbar-brand" href="/home">
                Make Post
            </a>

        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Welcome {{username}}</h2>
        </div>
    </div>
</div>

<div class="container" id='feed'>
    <div class="row">
        <div class=" col-lg-6">
            Your Feed
        </div>
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <select class="custom-select" id="category">
                            <option selected value="">All Types</option>
                            {{#each types}}
                            <option value="{{type}}">{{type}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-light" href="/user-posts">New Post</a>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-light" href="/">Home</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 post-container">
                    {{#if cont}}
                    {{#each posts}}
                    <div class="card" data-post="{{id}}">
                        <div class="card-header">
                            <button class="delete btn btn-danger" style="float: right;">X</button>
                            <button class="edit btn btn-primary" style="float: right;">EDIT</button>
                            <h5 style="font-weight: 700;">{{user}}</h5>
                            <p>{{type}}</p>
                            <small style="float: right;"> ({{date}})</small>
                        </div>
                        <div class="card-body">
                            <p style="color: black;">{{content}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}

                    {{#unless cont}}
                    <h4>No posts yet for this category. <br>Use the form below to make a new post.
                    </h4>

                    {{/unless}}
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Custom Script -->
{{#if type}}
<script src="../js/user.js" type="text/javascript"></script>
{{/if}}

{{#unless type}}
<script src="js/user.js" type="text/javascript"></script>
{{/unless}}