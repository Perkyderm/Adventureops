<div class="container">
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="form-group">
                <select class="custom-select" id="category">
                    <option selected value="">All Types</option>
                    <option value="Hiking">Hiking</option>
                    <option value="Camping">Camping</option>
                    <option value="Climbing">Climbing</option>
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <a class="btn btn-light" href="/user-posts">New Post</a>
        </div>
        <div class="col-md-2">
            <a class="btn btn-light" href="/">Home</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 post-container">
            {{#if cont}}
            {{#each posts}}
            <div class="card" data-post="{{id}}">
                <div class="card-header">
                    <button class="delete btn btn-danger" style="float: right;">x</button>
                    <button class="edit btn btn-danger" style="float: right;">EDIT</button>
                    <h5 style="font-weight: 700;">{{user}}</h5>
                    <p>{{type}}</p>
                    <small style="float: right;"> ({{date}})</small>
                </div>
                <div class="card-body">
                    <p style="color: black;">{{content}}</p>
                </div>
            </div>
            {{/each}}
            {{/if}}

            {{#unless cont}}
            <h4>No posts yet for this category. <br>Click <a href="/user-posts">here</a> to make a new post.</h4>

            {{/unless}}


        </div>
    </div>
</div>
<!-- Custom Script -->

<script src="js/posts.js" type="text/javascript"></script>